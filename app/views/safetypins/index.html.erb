<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<h1>Listing Safetypins</h1>

<div style='width: full;'>
  <div id="geolocation" style='width: full; height: 500px;'></div>
</div>

<script type="text/javascript">
     var handler = Gmaps.build('Google');
    handler.buildMap({ internal: {id: 'geolocation'} }, function(){
      if(navigator.geolocation)
        navigator.geolocation.getCurrentPosition(displayOnMap);
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    });

    function displayOnMap(position){
      var marker = handler.addMarker({
        lat: position.coords.latitude,
        lng: position.coords.longitude,
      });
      handler.map.centerOn(marker);
    };

      var markers = handler.addMarkers(<%=raw @hash.to_json %>);
</script>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @safetypins.each do |safetypin| %>
      <tr>
        <td><%= safetypin.latitude %></td>
        <td><%= safetypin.longitude %></td>
        <td><%= safetypin.address %></td>
        <td><%= safetypin.description %></td>
        <td><%= link_to 'Show', safetypin %></td>
        <td><%= link_to 'Edit', edit_safetypin_path(safetypin) %></td>
        <td><%= link_to 'Delete', safetypin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="center">
  <%= link_to "New Pin", new_safetypin_path, class: "btn btn-default" %>
</div>
